<div class="col-md-7">
  <p id="notice"><%= notice %></p>

  <h1>Your Orders</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Product Name</th>
      <th>Price</th>
      <th>Buyer</th>
      <th>Customer</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product.name %></td>
        <td><%= order.product.price %></td>
        <td><%= order.user_buyer.name %></td>
        <td><%= order.user_customer.name %></td>
        <td><%= link_to 'Delete Order', order, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>


  <div class="card">
    <div class="row">
      <h3 class="pull-right">Total Price: <%= @orders.inject(0) {|sum, e| sum + e.product.price} %></h3>
    </div>
    <div class="row pull-right">
      <%= link_to 'Checkout Now', transactions_path(:transaction => {:customer_user_id => @transaction.customer_user.id, :total => @transaction.total, :status => true}), method: :post, data: {confirm: 'Are you sure?'}, :class => 'btn btn-primary' %>
    </div>
  </div>
</div>
<div class="col-md-7">
  <p id="notice"><%= notice %></p>


  <div class="panel panel-default">
    <div class="panel-heading">All Orders</div>
    <table class="table">
      <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Buyer</th>
        <th>Customer</th>
        <th>Status</th>
      </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.product.name %></td>
          <td><%= order.product.price %></td>
          <td><%= order.user_buyer.name %></td>
          <td><%= order.user_customer.name %></td>
          <td><%= order.order_status %></td>

          <% if order.status == ORDER_STATUES[:CUSTOMER_REVEIVED] %>
            <td><%= link_to 'Acknowledged Order', order_acknowledged_path(order), method: :put, :action => :acknowledged, data: {confirm: 'Are you sure?'}, :class => 'btn btn-info btn-sm' %></td>
          <% end %>

        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
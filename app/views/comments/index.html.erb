<div class="col-md-7">
  <p id="notice"><%= notice %></p>

  <h1>Product Comments</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Comment</th>
      <th>Product Name</th>
      <th>User Name</th>
      <th>Comment Time</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.comment %></td>
        <td><%= comment.product.name %></td>
        <td><%= comment.user.name %></td>
        <td><%= comment.created_at %></td>
        <!--        <td><%#= link_to 'Show', product_comments_url(@product) %></td>-->
        <!--        <td><%#= link_to 'Edit', edit_product_comment(comment) %></td>-->
<!--        <td><%#= link_to 'Destroy', comment_path(@product), method: :delete, data: {confirm: 'Are you sure?'} %></td>-->
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Comment', new_product_comment_path %>
</div>

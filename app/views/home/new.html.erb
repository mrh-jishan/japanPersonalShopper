<div class="container">
  <div class="row">
    <div class="panel panel-primary">
      <div class="panel-heading">Contact with US</div>
      <div class="panel-body">
        <!--        <form>-->
        <%= form_for @feedback, url: {action: "create"}, html: {class: "nifty_form"} do |form| %>
          <div class="form-group">
            <label for="name">Name</label>
            <%= form.text_field :name, :class => 'form-control', :placeholder => 'Enter your name' %>
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <%= form.text_field :email, :class => "form-control", :placeholder => 'Enter your email address' %>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="message">Feedback</label>
            <%= form.text_area :feedback, :class => 'form-control', :placeholder => 'Enter your feedback' %>
          </div>
          <div class="mx-auto pull-right">
            <%= form.submit :class => 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

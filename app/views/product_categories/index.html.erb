<div class="col-md-7">
  <p id="notice"><%= notice %></p>


  <div class="panel panel-default">
    <div class="panel-heading">Product Categories</div>
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Action</th>
      </tr>
      </thead>

      <tbody>
      <% @product_categories.each do |product_category| %>
        <tr>
          <td><%= product_category.name %></td>
          <td><%= link_to 'Edit', edit_product_category_path(product_category), :class => 'btn btn-primary btn-sm' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
  <%= link_to 'New Product Category', new_product_category_path %>
</div>